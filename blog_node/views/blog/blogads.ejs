<%- include('../partition/header.ejs') %>
<section class="login-wrap mtb-40">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="login-box">
                    <h1 class="alert alert-success text-center">Advertised List</h1>
                    <%# Show All Data %>
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Image</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% var i=1 %>
                                <% data.forEach((item)=>{ %>

                                    <tr>
                                        <td>
                                            <%= i++ %>
                                        </td>
                                        <td>
                                            <%= item.title %>
                                        </td>
                                        <td>
                                            <%= item.description %>
                                        </td>
                                        <td>
                                            <img src="../upload/<%= item.image %>">
                                        </td>
                                        <td>
                                            <a href="/blogads/delete/<%= item._id %>">delete </a>
                                        </td>
                                        </tr>
                                        <%})%>  
                                    </tbody>
                                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<%- include('../partition/footer.ejs') %>