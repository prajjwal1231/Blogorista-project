<%- include('../partition/header.ejs') %>
<section class="login-wrap mtb-40">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="login-box">
                    <h1>Edit Blog</h1>
                    <form action="/blog/update/<%= data._id %>" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <input type="text" name="title" class="form-control" placeholder="title" value="<%= data.title %>">
                        </div>
                        <div class="form-group">
                            <input type="text" name="description" class="form-control" placeholder="description" value="<%= data.description %>">
                        </div>
                        <div class="form-group">
                        <img src="/upload/<%= data.image %>" style=" display: block;
                            margin-left: auto;
                            margin-right: auto;
                            width: 50%;">
                            </div>
                        <div class="form-group">
                            <input type="file" name="image" class="form-control" placeholder="image">
                        </div>
                        <div class="form-group">
                           <button class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>         
            </div>
        </div>
    </div>
</section>
<%- include('../partition/footer.ejs') %>