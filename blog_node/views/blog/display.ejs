<%- include('../partition/header.ejs') %>
<section class="login-wrap mtb-40">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-14">
                <div class="login-box">
                    <h1 class="alert alert-success text-center">List of Blogs</h1>
                    <%# Show All Data %>
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Image</th>
                                    <th>Action</th>
                                    <%if(display[0].role == "admin"){%>
                                    <th>Advertisement</th>
                                    <%}%>
                                </tr>
                            </thead>
                            <tbody>
                                <% var i=1 %>
                                <% var k=1 %>
                                <% let j=0 %>
                                <% data.forEach((item)=>{ %>

                                    <tr>
                                        <td>
                                            <%= i++ %>
                                        </td>
                                        <td>
                                            <%= item.title %>
                                        </td>
                                        <td>
                                            <%= item.description %>
                                        </td>
                                        <td>
                                            <img src="/upload/<%= item.image %>">
                                        </td>
                                        <td>
                                            <a class="btn btn-primary" href="/blog/view/<%= item._id %>">view </a>
                                            <a class="btn btn-info" href="/blog/edit/<%= item._id %>">Edit </a>
                                            <a class="btn btn-danger" href="/blog/delete/<%= item._id %>">delete </a>
                                        </td>
                                        <% if(display[0].role == "admin"){%>
                                            
                                        <td>
                                            
                                            <% 
                                            if(item.advertise == 'checked'){ %>
                                                <a class="btn btn-primary" href="/admin/checkp/<%= item._id %>" >Check </a><br><br>
                                                    <a class="btn btn-warning" href="/blogads/create/<%= item._id %>">Allow to advertise </a>
                                                    <%}%>
                                                
                                        </td>
                                        <%}%>
                                        </tr>
                                        <%})%>  
                                    </tbody>
                                    </table>
                                    <% if(display[0].role == "admin"){%>
                                    <div class="card">
                                        <div class="card-header">
                                            <strong class="card-title">Status</strong>
                                        </div>
                                        <div class="card-body">
                                            <%if(data54 == '[object Object]'){%>
                                                <p>Title: <%= data54[0].title%></p>
                                                <img src="/upload/<%= data54[0].image %>" style="border: 1px solid #ddd;
                                                border-radius: 4px;
                                                padding: 5px;
                                                width: 350px;">  
                                                <p>Already Advertising</p>
                                            <%}else{%> 
                                                <p>Click on "Allow to advertise" to advertise</p>
                                                <%}%>
                                        </div>
                                    </div>
                                    <%}%>
                </div>
            </div>
        </div>
    </div>
</section>
<%- include('../partition/footer.ejs') %>