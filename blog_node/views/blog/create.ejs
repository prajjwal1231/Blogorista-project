<%- include('../partition/header.ejs') %>
<section class="login-wrap mtb-40">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="login-box">
                    <h1>Add New Blog</h1>
                    <form action="/blog/insert" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <input type="text" name="title" class="form-control" placeholder="title">
                        </div>
                        <div class="form-group">
                            <textarea type="text" placeholder="description" name="description" class="form-control" id="exampleFormControlTextarea1" rows="22"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="file" name="image" class="form-control" placeholder="image">
                        </div>
                        <div class="form-group">
                           <button class="btn btn-primary">Submit</button>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" name="ads_check" type="checkbox" value="checked" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                              Click here if you want this to be advertised. If your blog gets accepted than it will be automatically starts displaying at advertisement campaign. 
                            </label>
                          </div>
                    </form>
                </div>         
            </div>
        </div>
    </div>
</section>
<%- include('../partition/footer.ejs') %>