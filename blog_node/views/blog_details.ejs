<%- include('./partition/header.ejs') %>
<section class="blog-detail mtb-40">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="blog-left">
                    <h1><%= data.title %></h1>
                    <div class="posted-on">
                        <p>by <span><%= data.created_by %></span> on <span>October 22, 2018</span></p>
                    </div>
                    <div class="detail-img">
                       <img src="/upload/<%= data.image %>" alt="blog" />
                    </div>
                    <div class="blog-desc">
                        <p><%= data.description %> </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-right">
                    <div class="right-widget recent-post">
                        <h3>Recent Blogs</h3><br>
                        <% rand.forEach((item5)=>{ %>
                        <a href="/blog_details/<%= item5._id%>">
                            <div class="rb-box">
                                <div class="rb-box-img">
                                    <img src="/upload/<%= item5.image%>" alt="blog1" />
                                </div>
                                <div class="rb-box-desc">
                                    <h4><%= item5.title%></h4>
                                    <p>Posted On: <%= item5.createdAt%></p>
                                </div>
                            </div>
                        </a>
                        <%})%>                      
                    </div>
