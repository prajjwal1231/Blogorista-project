<%- include('../partition/header.ejs') %>
<section class="login-wrap mtb-40">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-14">
                <div class="login-box">
                    <h1 class="alert alert-success text-center">Contact Information</h1>
                    <%# Show All Data %>
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Message</th>
                                    <th>Action</th> 
                                </tr>
                            </thead>
                            <tbody>
                                <% var i=1 %>
                                <% var k=1 %>
                                <% data.forEach((item)=>{ %>

                                    <tr>
                                        <td>
                                            <%= i++ %>
                                        </td>
                                        <td>
                                            <%= item.name %>
                                        </td>
                                        <td>
                                            <%= item.email %>
                                        </td>
                                        <td>
                                            <%= item.phone %>
                                        </td>
                                        <td>
                                            <%= item.message %>
                                        </td>
                                        <td>
                                            <a class="btn btn-primary" href="/contact/view/<%= item._id %>">view </a>
                                            <a class="btn btn-danger" href="/contact/delete/<%= item._id %>">delete </a>
                                        </td>
                                        </tr>
                                        <%})%>  
                                    </tbody>
                                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<%- include('../partition/footer.ejs') %>