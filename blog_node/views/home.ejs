<%- include('./partition/header.ejs') %>
<section class="banner" style="margin-top: 2px;">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img class="d-block w-100" src="../logo banner.jpg" alt="First slide">
                
              </div>
              <% data2.forEach((item2)=>{ %>
              <div class="carousel-item">
                <img class="d-block w-100" src="../upload/<%= item2.image %>" alt="First slide">
              </div>
              <%})%>
              <% data3.forEach((item3)=>{ %>
                <div class="carousel-item">
                  <div class="banner">
                    <div class="banner-box">
                      <div class="intro-text">
                        <div class="intro-text-box">
                          <h1><%= item3.title %></h1>
                          <p><%= item3.description %></p>
                          <a href="/blog_details/<%= item3.blog_id %>" class="btn btn-danger">Read more...</a>
                        </div>
                      </div>
                      <img src="assets/images/banner.jpg" alt="banner" />
                    </div>
                  </div>
                </div>
                <%})%>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
</section>
<section class="featured-blog mtb-40">
    <div class="container">
        <div class="row">
            <% var i=1 %>
                                <% data.forEach((item)=>{ %>
            <div class="col-md-4">
                <div class="blog-box">
                    <img src="../upload/<%= item.image %>" alt="blog1" />
                    <h3><%= item.title %></h3>
                    <p>by <span><%= item.created_by %></span> on <span><%= item.createdAt %></span></p>
                    <p><%= item.description %> </p>
                    <a href="/blog_details/<%= item._id %>" class="btn btn-danger">Read more...</a>
                </div>
            </div>
            <%})%>
        </div>
    </div>
</section>
<%- include('./partition/footer.ejs') %>